<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="150dp" xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:background="#D3D3D3"
             android:layout_marginTop="10dp"
>


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                        android:id="@+id/imageViewRowCommunity"
                        android:layout_width="70dp"
                       android:layout_height="70dp"
                       android:layout_margin="5dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/textViewRowCommunity"
                        android:src="@drawable/card_profil"
            />
        
            <TextView
                        android:id="@+id/textViewRowCommunity"
                        android:layout_width="0dp"
                      android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/imageViewRowCommunity"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="10dp"
                        tools:text="Ceci est un paragraphe de commentaire pour voir s'il le retour Ã  la ligne fonctionne"
            />

            <ImageView
                        android:id="@+id/imageViewIconLike"
                        android:layout_width="30dp"
                       android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="@+id/textViewRowCommunity"
                       android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_comment"
            />

        <ImageView
                android:id="@+id/imageViewIconComment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imageViewIconLike"
                app:layout_constraintTop_toTopOf="@+id/textViewRowCommunity"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_like"

        />

        <ImageView
                android:id="@+id/imageViewIconSignal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_signal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textViewRowCommunity"
                android:layout_margin="10dp"

        />



    </android.support.constraint.ConstraintLayout>



</FrameLayout>